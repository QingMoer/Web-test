<html lang="en">
  <head>
		<meta charset="utf-8">
		<title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
		<script src="../node_modules/jquery/dist/query.min.js"charset="utf-8"></script>
		<script src="../node_modules/bootstrap/dist/js/bootstrap.min.js" charset="utf-8"></script>
	</head>
  <ul class="nav nav-tabs">
    <li role="presentation"><a href="/users/logout" class="btn btn-secondary">logout</a></li>
</ul>
    
  <body>

    <div class="details content">
      <h2><%= Survey.name %></h2>
      <div class="content">
        <p><%= Survey.address %></p>
      </div>
      <a
        class="delete"
        data-doc="<%= survey.id %>"
        onclick="alert('Are you sure?')"
        >delete</a
      >
    </div>

    <script>
      const trashcan = document.querySelector("a.delete");
      trashcan.addEventListener("click", (e) => {
        const endpoint = `/blogs/${trashcan.dataset.doc}`;
        fetch(endpoint, {
          method: "DELETE",
        })
          .then((response) => response.json())
          .then((data) => (window.location.href = data.redirect))
          .catch((err) => console.log(err));
      });
    </script>
  </body>
</html>
