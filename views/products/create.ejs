<body>
    <div class="card m-1">
        <div class="bg-info">
<h1 >Create New Item:</h1>
<p><a href="/products"><button type="button" class="btn btn-warning">Back</button></a></p>
<form action="/products/<%= product %>" method="POST">
    <div class="form-group">
    <label for="name">Product Name: </label>
    <input type="text" name="name" placeholder="Product Name"> <br><br>
</div>
    <div class="form-group">
    <label for="price">Product Price: </label>
    <input type="number" name="price" placeholder="Product Price"> <br><br>
</div>
    <div class="form-group">
    <label for="category">Category: </label>
    <select name="category" id="">
        <% for (let category of categories) {%>
            <option value="<%= category %>"><%= category %></option>
        <% } %>
    </select>
    <br><br><br><br>
</div>

    <button type="submit" class="btn btn-primary m-3">Add Product</button>
</form>
        </div>
    </div>
